{
	"entry": {
		"./src/index.ts": "./out/index.bundle.js",
		"./src/tool/schema_to_md.ts": "./out/schema_to_md.js"
	},
	"compileOnSave": true,
	"bundlerOptions": {
		"bundleExternals": true,
		"externals": ["vscode"]
	},
	"compilerOptions": {
		"lib": ["ES2018"],
		"module": "commonjs",
		"target": "ES2018",
		"outDir": "out",
		"sourceMap": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"strict": true,
		"useUnknownInCatchVariables": false,
		"experimentalDecorators": true
	},
	"include": ["src/**/*"]
}
