{
    "entry": {
        "./src/index.ts": "./out/index.bundle.js",
		"./src/tool/schema_to_md.ts": "./out/schema_to_md.js"
    },
	"compileOnSave": true,
	"bundlerOptions": {
		"bundleExternals": true,
        "externals": ["vscode"]
	},
	"compilerOptions": {
		"lib": [
			"es2015"
		],
		"module": "commonjs",
		"target": "es2015",
		"outDir": "out",
		"sourceMap": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"strict": true,
		"useUnknownInCatchVariables": false,
		"experimentalDecorators": true
	},
	"include": ["src/**/*"]
}